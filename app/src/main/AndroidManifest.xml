<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FixFlow"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.FixFlow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.fixflow.login.LoginActivity"
            android:exported="true"
            />
        <activity android:name=".register.RegisterActivity"
            android:exported="true"/>
        <activity android:name=".receptionist.ReceptionistActivity"
            android:exported="true"
            />
        <activity android:name=".software.SoftwareActivity"
            android:exported="true"
            />
        <activity android:name=".hardware.HardwareActivity"
            android:exported="true"
            />
        <activity android:name=".addrequest.AddRequestActivity"
            android:exported="true"/>
        <activity android:name=".receptionist.done.DoneRequestsActivity"
            android:exported="true"/>
    </application>

</manifest>